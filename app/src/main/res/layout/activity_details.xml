<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context="com.example.user.retrofitting.ui.activities.DetailsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_of_movie"
        tools:text="Orphan"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:textAlignment="center"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        tools:src="@color/colorAccent"
        android:scaleType="fitXY"
        android:id="@+id/poster_image_movie_details"
        android:layout_below="@+id/title_of_movie"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"
        android:id="@+id/date_release"
        android:layout_margin="3dp"
        tools:text="date some"
        android:layout_below="@+id/poster_image_movie_details"/>
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/release_date"
       android:layout_margin="3dp"
       android:layout_below="@+id/poster_image_movie_details"
       android:layout_toLeftOf="@+id/date_release"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/overview_field"
        android:text="Overview : "
        android:textSize="20sp"
        android:layout_below="@+id/date_release"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="this movie is blablabla"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/overview_field"
        android:id="@+id/over_view"/>



</RelativeLayout>
